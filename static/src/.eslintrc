{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
    }
  },
  "rules": {
    "global-require": 0,
    "indent": [
      1,
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "max-len": 0,
    "new-cap": [
      2,
      {
        "capIsNew": false,
        "newIsCap": true
      }
    ],
    "no-param-reassign": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-tabs": 0,
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "react/jsx-indent-props": [
      1,
      "tab"
    ],
    "react/jsx-indent": [
      1,
      "tab"
    ],
    "react/require-default-props": 0,
    "react/prefer-stateless-function": 1
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
